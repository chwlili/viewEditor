
<xml name="收藏">
	
	<depends>
		<depend src="/public/publicFrames.xml"/>
		<depend src="/public/publicButtons.xml"/>
		<depend src="/public/publicFormats.xml"/>
	</depends>
	
	<bitmaps>
		<bitmap id="50" src="imgs/50.png"/>
		<bitmap id="标题字" src="imgs/标题字.png"/>
		<bitmap id="底框" src="imgs/底框.jpg"/>
		<bitmap id="关闭小叉01" src="imgs/关闭小叉01.png"/>
		<bitmap id="关闭小叉02" src="imgs/关闭小叉02.png"/>
		<bitmap id="关闭小叉03" src="imgs/关闭小叉03.png"/>
		<bitmap id="街机战士" src="imgs/街机战士.png"/>
		<bitmap id="桌标" src="imgs/桌标.png"/>
		<bitmap id="钻石" src="imgs/钻石.png"/>
		<bitmap id="双层样式底框" src="imgs/双层样式底框.png"/>
	</bitmaps>
	
	<texts>
		<text id="收藏"><![CDATA[收藏游戏到桌面快捷方式<br/>可快速进入游戏，并立即获得]]></text>
		<text id="保存">保存</text>
	</texts>
	
	<formats>
		<format id="消息格式" font="宋体" size="14" color="0xefb55a" filter="黑色边框" align="center" leading="6" />
	</formats>
	
	<controls>
		<window id="main"  width="467" height="327">
			<image bmp="双层样式底框" left="0" right="0" top="0" bottom="0" grid="50,50,50,50" />
			<image bmp="底框" center="0" middle="0" width="450" height="310" />
			<image bmp="标题字" center="0" top="-20" width="458" height="54" />
			
			<button name="closeBtn" top="12" right="12" width="14" height="14">
				<state frame="1" back="关闭小叉01"/>
 				<state frame="2" back="关闭小叉02"/>
				<state frame="3" back="关闭小叉03"/>
			</button>
			
			<box center="0" top="100" width="150" height="32">
				<image bmp="钻石" left="0" middle="0" width="100" height="31"/>
				<image bmp="50" right="0" middle="0" width="43" height="30" />
			</box>
			<label name="msgLab" center="0" top="60" width="450" height="50" html="true" multiline="true" wordWrap="true" format="消息格式" text="收藏" />
			
			<image bmp="桌标" center="2" top="180" width="66" height="66" />
			<image bmp="街机战士" center="2" top="240" width="73" height="21" />
			
			<labelButton name="saveBtn" center="0" bottom="20" width="82" height="28" label="保存">
				<state frame="1" back="普通功能按钮1" format="按钮标签_efb55a_12_居中" grid="20,0,20,0"/>  
				<state frame="2" back="普通功能按钮2" format="按钮标签_efb55a_12_居中" grid="20,0,20,0"/>  
				<state frame="3" back="普通功能按钮3" format="按钮标签_efb55a_12_居中" grid="20,0,20,0"/> 
			</labelButton>
		</window>
		
	</controls>
</xml>