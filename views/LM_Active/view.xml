	</bitmaps>
	
	<bitmapReaders>
		<bitmapReader id="宝箱提示" bmp="宝箱提示"/>
	</bitmapReaders>
	
	<texts>
		<text id="text_0">可探索宝藏$1次</text>
		<text id="text_1">可挑战金库$1次</text>
		<text id="text_2">可点石成金$1次</text>
