		<text id="协助探索冷却中">协助探索冷却中</text>
	</texts>
	
	<controls>
		<labelButton id="clearBtn" label="" width="27" height="23">
			<state frame="1" back="clearBtn"/>
			<state frame="2" back="clearBtn"/>
			<state frame="3" back="clearBtn"/>
		</labelButton>
		
		<labelButton id="rewardBtn" width="40" height="41">
			<state frame="1" back="活跃宝箱01"/>
			<state frame="2" back="活跃宝箱01"/>
			<state frame="3" back="活跃宝箱01"/>
		</labelButton>
		
		<image id="rewardTip" bmp="宝箱提示" width="101" height="48" />
