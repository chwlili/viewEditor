    <depend src="/public/controls/scroller/Scroller.xml"/>
    <depend src="/public/publicFormats.xml"/>
    <depend src="/public/publicTexts.xml"/>
    <depend src="/public/publicIcons.xml"/>
    <depend src="/public/publicNumimage.xml"/>
