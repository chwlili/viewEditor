<xml>
	<depends>
		<depend src="skillkeyboard.xml"/>
	</depends>
	<bitmaps>
		<bitmap id="背景" src="背景.png"/>
		<bitmap id="操作指南" src="操作指南.png"/>
		

		<bitmap id="标题文字-空中打击" src="标题文字-空中打击.png"/>

		<bitmap id="def_key" src="按钮01.png"/>
		<bitmap id="def_K" src="按钮01K.png"/>
		<bitmap id="def_J" src="按钮01J.png"/>

		<bitmap id="up_key" src="按钮01-红.png"/>
		<bitmap id="down_key" src="按钮02-红.png"/>
		
		<bitmap id="up_J" src="按钮01-红J.png"/>
