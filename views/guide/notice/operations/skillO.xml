	<controls>

		<box id="引导框" x="321" y="40" width="226" height="82">
			<image bmp="背景" width="226" height="82" grid="10,10,10,10"/>
			<image bmp="操作指南" width="64" height="22" center="0" top="-8"/>

			<box name="动画面板" center="0" top="88" width="226" height="1">
				<image name="标题剑士" bmp="标题剑士" width="102" height="26" center="0" top="0" visible="false" />
				<image name="标题刺客" bmp="标题刺客" width="102" height="26" center="0" top="0" visible="false" />
				<image name="标题战士" bmp="标题战士" width="102" height="26" center="0" top="0" visible="false" />

				<box name="按键动画" width="73" height="33" center="-20" top="30">
					<box x="0" y="0" width="33" height="33">
						<bitmap bitmap="def_key" width="33" height="33"/>
						<bitmap bitmap="def_U"   width="15" height="12" x="8" y="8"/>
					</box>
					<box x="40" y="0" width="33" height="33">
						<bitmap bitmap="def_key" width="33" height="33"/>
						<bitmap bitmap="def_I"   width="15" height="12" x="8" y="8"/>
					</box>
					<box name="o_up" x="80" top="0" width="33" height="33">
						<bitmap bitmap="up_key" width="33" height="33"/>
						<bitmap bitmap="up_O"   width="19" height="18" x="7" y="5"/>
					</box>
					<box name="o_down" x="80" top="0" width="33" height="33">
						<bitmap bitmap="down_key" width="33" height="33"/>
						<bitmap bitmap="down_O"   width="19" height="18" x="7" y="8"/>
					</box>
					
					<bitmap name="handler_right" bitmap="右手" width="68" height="94" x="21" y="21"/>
				</box>
			</box>
		</box>
		
	</controls>

